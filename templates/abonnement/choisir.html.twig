{% block title %} {% endblock %}

{% block body %}
<style>
    .container {
        text-align: center;
        max-width: 600px;
        margin: auto;
        padding: 20px;
    }

    .subscription-options {
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: center;
    }

    .subscription-card {
        display: flex;
        align-items: center;
        cursor: pointer;
        background: #f9f9f9;
        padding: 15px;
        border-radius: 8px;
        width: 100%;
        max-width: 300px;
        border: 2px solid transparent;
        transition: all 0.3s ease-in-out;
    }

    .subscription-card:hover {
        border-color: #007bff;
        transform: scale(1.05);
    }

    .subscription-card input {
        display: none;
    }

    .subscription-card .card-content {
        text-align: center;
        width: 100%;
    }

    .subscription-card input:checked + .card-content {
        background: #007bff;
        color: white;
        padding: 10px;
        border-radius: 8px;
    }

    .payment-info {
        margin-top: 20px;
        text-align: left;
        background: #f9f9f9;
        padding: 15px;
        border-radius: 8px;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .payment-info label {
        font-weight: bold;
        display: block;
        margin-top: 10px;
    }

    .payment-info input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 16px;
        text-align: center;
    }

    /* Boutons stylisés */
    .styled-button, .btn-mes-abonnements {
        margin-top: 20px;
        padding: 12px 24px;
        font-size: 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        display: inline-block;
        text-decoration: none;
        border: none;
        font-weight: bold;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .styled-button {
        background: linear-gradient(45deg, #007bff, #0056b3);
        color: white;
        box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
    }

    .styled-button:hover {
        background: linear-gradient(45deg, #0056b3, #003f7f);
        transform: translateY(-2px);
    }

    .btn-mes-abonnements {
        background: linear-gradient(45deg, #28a745, #1e7e34);
        color: white;
        box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
    }

    .btn-mes-abonnements:hover {
        background: linear-gradient(45deg, #1e7e34, #145c26);
        transform: translateY(-2px);
    }

    /* Boîte d'alerte */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.5s ease-in-out;
    }

    .modal-content h3 {
        margin: 0;
        font-size: 20px;
        color: #28a745;
    }

    .modal-content button {
        margin-top: 15px;
        padding: 10px 20px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease-in-out;
    }

    .modal-content button:hover {
        background: #0056b3;
    }

    .btn-home {
    margin-top: 20px;
    padding: 12px 24px;
    font-size: 16px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    display: inline-block;
    text-decoration: none;
    border: none;
    font-weight: bold;
    letter-spacing: 1px;
    text-transform: uppercase;
    background: linear-gradient(45deg, #ff5722, #e64a19);
    color: white;
    box-shadow: 0 4px 10px rgba(255, 87, 34, 0.3);
}

.btn-home:hover {
    background: linear-gradient(45deg, #e64a19, #bf360c);
    transform: translateY(-2px);
}

</style>

<div class="container">
    <h2>Choisissez votre abonnement</h2>

    <form id="subscriptionForm">
        <div class="subscription-options">
            <label class="subscription-card">
                <input type="radio" name="type" value="journalier" required>
                <div class="card-content">
                    <h3>Journalier</h3>
                    <p>10€ / jour</p>
                </div>
            </label>

            <label class="subscription-card">
                <input type="radio" name="type" value="mensuel">
                <div class="card-content">
                    <h3>Mensuel</h3>
                    <p>50€ / mois</p>
                </div>
            </label>

            <label class="subscription-card">
                <input type="radio" name="type" value="annuel">
                <div class="card-content">
                    <h3>Annuel</h3>
                    <p>500€ / an</p>
                </div>
            </label>
        </div>

        <div class="payment-info">
            <h3>Informations de paiement</h3>

            <label>Numéro de carte :</label>
            <input type="text" id="cardNumber" maxlength="16" required>

            <label>Date d'expiration :</label>
            <input type="text" id="expiryDate" placeholder="MM/YYYY" maxlength="7" required>

            <label>Cryptogramme (CVV) :</label>
            <input type="text" id="cvv" maxlength="3" required>
        </div>

        <button type="submit" class="styled-button">Valider et Payer</button>
    </form>

    <a href="{{ path('mes_abonnements') }}" class="btn-mes-abonnements">Mes abonnements</a>
    <a href="{{ path('homepage') }}" class="btn-home">Retour à l'accueil</a>

</div>

<!-- Boîte d'alerte -->
<div id="successModal" class="modal">
    <div class="modal-content">
        <h3>✅ Votre abonnement a bien été pris en compte !</h3>
        <button onclick="closeModal()">OK</button>
    </div>
</div>
<script>
document.getElementById("expiryDate").addEventListener("input", function(event) {
    let value = event.target.value.replace(/\D/g, ""); // Supprimer tout sauf les chiffres

    if (value.length >= 2) {
        value = value.substring(0, 2) + "/" + value.substring(2, 6); // Ajouter automatiquement "/"
    }

    event.target.value = value;
});

document.getElementById("subscriptionForm").addEventListener("submit", function(event) {
    event.preventDefault(); // Empêcher la soumission classique

    let expiryDate = document.getElementById("expiryDate").value;
    let today = new Date();
    let [month, year] = expiryDate.split("/");

    let expiry = new Date(parseInt(year), parseInt(month) - 1); // Date du mois/année sélectionné

    if (expiryDate.length !== 7 || parseInt(month) < 1 || parseInt(month) > 12 || expiry <= today) {
        alert("❌ La date d'expiration doit être au format MM/YYYY et ultérieure à aujourd'hui.");
        return;
    }

    let formData = new FormData(document.getElementById("subscriptionForm"));

    fetch("{{ path('ajouter_abonnement') }}", {
        method: "POST",
        body: formData,
        headers: { "X-Requested-With": "XMLHttpRequest" }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById("successModal").style.display = "flex";

            // Rafraîchir la page après validation
            setTimeout(() => {
                window.location.reload();
            }, 2000);
        } else {
            alert("❌ Une erreur est survenue. " + (data.error || "Veuillez réessayer."));
        }
    })
    .catch(error => {
        console.error("Erreur:", error);
        alert("❌ Une erreur est survenue. Impossible de confirmer l'abonnement.");
    });
});
</script>


{% endblock %}

{% block title %} {% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        box-sizing: border-box;
    }

    /* Container principal */
    .container {
        width: 90%;
        max-width: 900px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 16px;
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        padding: 30px;
        animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h1, h2 {
        text-align: center;
        color: #fff;
        font-weight: 600;
        margin-bottom: 20px;
        text-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    h2 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    h3 {
        font-size: 20px;
        color: #4b0082;
    }

    /* Form Section */
    .subscription-options {
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: center;
    }

    .subscription-card {
        display: flex;
        align-items: center;
        background: white;
        padding: 15px;
        border-radius: 10px;
        width: 100%;
        max-width: 350px;
        border: 2px solid #ddd;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .subscription-card:hover {
        border-color: #4b1bf8;
        transform: scale(1.05);
    }

    .subscription-card input {
        display: none;
    }

    .subscription-card .card-content {
        text-align: center;
        width: 100%;
        font-size: 18px;
        font-weight: bold;
    }

    .subscription-card input:checked + .card-content {
        background: linear-gradient(45deg, #ff5722, #ff3d00); /* Changer la couleur du fond ici */
        color: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(255, 87, 34, 0.5); /* Ajout d'un effet de lumière autour de l'élément sélectionné */
    }

    .styled-button, .submit-btn {
        background: linear-gradient(45deg, #6a1b9a, #ff4081);
        color: white;
        padding: 14px 28px;
        font-size: 18px;
        font-weight: bold;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 10px rgba(75, 27, 248, 0.3);
        margin-top: 20px;
        display: block; /* Ajouté pour centrer */
        margin-left: auto; /* Ajouté pour centrer */
        margin-right: auto; /* Ajouté pour centrer */
    }


    .styled-button:hover, .submit-btn:hover {
        background: linear-gradient(45deg, #ff4081, #6a1b9a);
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(75, 27, 248, 0.5);
    }

    .submit-btn:active {
        transform: translateY(0px);
        box-shadow: none;
    }

    /* Button secondary styles */
    .button-container {
        display: flex;
        gap: 15px;
        margin-top: 20px;
        justify-content: center;
        align-items: center;
    }

    .btn, .btn-home, .btn-secondary {
        padding: 12px 24px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }

    .btn-secondary {
        background-color: #28a745;
    }

    .btn-secondary:hover {
        background-color: #1e7e34;
        transform: translateY(-2px);
    }

    .btn-home {
        background-color: #ff5722;
    }

    .btn-home:hover {
        background-color: #bf360c;
        transform: translateY(-2px);
    }

    /* Card hover effect */
    .subscription-card:hover {
        border-color: #4b1bf8;
        transform: scale(1.05);
    }

    /* Section Containers */
    .section {
        margin-bottom: 30px;
        background: rgba(255, 255, 255, 0.25);
        padding: 20px;
        border-radius: 12px;
        box-shadow: inset 0 0 10px rgba(255,255,255,0.2);
    }

    .section h2 {
        font-size: 1.3rem;
        color: #fff;
        margin-bottom: 15px;
        text-shadow: 0 0 5px rgba(0,0,0,0.2);
        border-left: 4px solid #fff;
        padding-left: 10px;
        margin-left: 5px;
    }

    /* Inputs, selects, and buttons */
    .form-field input[type="text"],
    .form-field input[type="number"],
    .form-field input[type="date"],
    .form-field input[type="file"],
    .form-field select,
    .form-field textarea {
        padding: 10px 12px;
        border: 1px solid rgba(255,255,255,0.3);
        background: rgba(255,255,255,0.3);
        border-radius: 6px;
        font-size: 0.95rem;
        color: #fff;
        outline: none;
        transition: 0.3s;
    }

    ::placeholder {
        color: rgba(255,255,255,0.7);
    }

    .form-field input:focus,
    .form-field select:focus,
    .form-field textarea:focus {
        border-color: #fff;
        background: rgba(255,255,255,0.4);
        box-shadow: 0 0 8px rgba(255,255,255,0.3);
    }

    .photo-info {
        margin-top: 10px;
    }

    .photo-preview {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 10px;
        margin-top: 10px;
    }

    .photo-preview img {
        width: 100%;
        height: 100px;
        object-fit: cover;
        border-radius: 6px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    /* Breadcrumb */
    .breadcrumb {
        font-size: 14px;
        margin-bottom: 20px;
        color: #fff;
    }

    .breadcrumb a {
        color: #fff;
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    /* Flash messages */
    .alert-error {
        color: #a94442;
        background-color: #f2dede;
        border-color: #ebccd1;
    }

    .alert-success {
        color: #3c763d;
        background-color: #dff0d8;
        border-color: #d6e9c6;
    }

</style>

<div class="container">
    <h2>Choisissez votre abonnement</h2>

    <form id="subscriptionForm" action="{{ path('payer_abonnement') }}" method="POST">
    <div class="subscription-options">
        <label class="subscription-card">
            <input type="radio" name="type" value="journalier" required>
            <div class="card-content">
                <h3>Journalier</h3>
                <p>10€ / jour</p>
            </div>
        </label>

        <label class="subscription-card">
            <input type="radio" name="type" value="mensuel">
            <div class="card-content">
                <h3>Mensuel</h3>
                <p>50€ / mois</p>
            </div>
        </label>

        <label class="subscription-card">
            <input type="radio" name="type" value="annuel">
            <div class="card-content">
                <h3>Annuel</h3>
                <p>500€ / an</p>
            </div>
        </label>
    </div>

    <!-- Champ caché pour stocker l'abonnement sélectionné -->
    <input type="hidden" id="selectedType" name="type">

    <button type="submit" class="styled-button">Valider et Continuer</button>
</form>
    <div class="button-container">
        <a href="{{ path('mes_abonnements') }}" class="btn btn-secondary">Mes abonnements</a>
        <a href="{{ path('homepage') }}" class="btn btn-home">Retour à l'accueil</a>
    </div>
</div>

<script>
    let abonnementsExistants = {{ abonnements_existants is defined ? abonnements_existants|json_encode|raw : '[]' }};

    document.getElementById("subscriptionForm").addEventListener("submit", function(event) {
        let selected = document.querySelector('input[name="type"]:checked');

        if (!selected) {
            alert("❌ Veuillez sélectionner un abonnement.");
            event.preventDefault();
            return;
        }

        let selectedType = selected.value;

        // Vérifier si le type d'abonnement sélectionné existe déjà
        if (abonnementsExistants.includes(selectedType)) {
            let confirmation = confirm(`⚠️ L'abonnement ${selectedType} existe déjà.\nVoulez-vous ajouter un autre abonnement du même type ?`);

            if (!confirmation) {
                event.preventDefault(); // Annuler la soumission si l'utilisateur refuse
                return;
            }
        }

        document.getElementById("selectedType").value = selectedType;
    });
</script>




{% endblock %}

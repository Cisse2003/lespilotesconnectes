<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Dashboard</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .dashboard-container {
            width: 100%;
            max-width: 900px;
            padding: 25px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
            display: flex;
            flex-direction: column;
            gap: 20px;
            animation: fadeIn 0.6s ease-in-out;
        }

        .top-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #d8c3f3;
            padding-bottom: 15px;
        }

        .welcome h1 {
            font-size: 24px;
            color: #4b0082;
            font-weight: 600;
            margin: 0;
        }

        .welcome p {
            font-size: 14px;
            color: #666;
            margin: 5px 0 0;
        }

        .commission-box {
            background: #d8c3f3;
            padding: 10px 20px;
            border-radius: 10px;
            text-align: center;
        }

        .commission-box h2 {
            font-size: 16px;
            color: #4b0082;
            margin: 0 0 5px;
            font-weight: 500;
        }

        .commission-box .commission-value {
            font-size: 22px;
            font-weight: bold;
            color: #4b0082;
        }

        .actions-section {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }

        .action-btn {
            flex: 1 1 200px;
            padding: 15px;
            background: #4b0082;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            transition: background 0.3s ease, box-shadow 0.2s ease;
        }

        .action-btn:hover {
            background: #3a0061;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .logout-section {
            text-align: center;
        }

        .logout-btn {
            display: inline-block;
            padding: 10px 25px;
            background: #e74c3c;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .logout-btn:hover {
            background: #c0392b;
        }
    </style>
</head>
<body>
<div class="dashboard-container">
    <div class="top-section">
        <div class="welcome">
            <h1>Bienvenue, {{ admin.nom }} {{ admin.prenom }}</h1>
            <p>Votre tableau de bord d'administration</p>
        </div>
        <div class="commission-box">
            <h2>Total des commissions</h2>
            <div class="commission-value">
                <span id="commission-value" data-value="{{ admin.commissionTotale }}">0 €</span>
            </div>
        </div>
    </div>

    <div class="actions-section">
        <a href="{{ path('admin_utilisateurs') }}" class="action-btn">Gérer les utilisateurs</a>
        <a href="{{ path('admin_offres') }}" class="action-btn">Gérer les offres</a>
        <a href="{{ path('admin_locations') }}" class="action-btn">Gérer les locations</a>
        <a href="{{ path('admin_litiges') }}" class="action-btn">Consulter les litiges</a>
    </div>

    <div class="logout-section">
        <a href="{{ path('admin_logout') }}" class="logout-btn">Déconnexion</a>
    </div>
</div>

<script>
    function animateNumbers(target, start, end, duration) {
        let range = end - start;
        let current = start;
        let increment = range / (duration / 16);
        let stepTime = 16;

        function updateNumber() {
            current += increment;
            if (current >= end) {
                current = end;
                clearInterval(timer);
            }
            target.innerText = current.toLocaleString("fr-FR", { minimumFractionDigits: 2 }) + " €";
        }

        let timer = setInterval(updateNumber, stepTime);
    }

    document.addEventListener("DOMContentLoaded", function () {
        let commissionElement = document.getElementById("commission-value");
        let commissionTotale = parseFloat(commissionElement.dataset.value);
        animateNumbers(commissionElement, 0, commissionTotale, 2000);
    });
</script>
</body>
</html>
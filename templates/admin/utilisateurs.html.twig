<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des utilisateurs</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        .container {
            background-color: #b19cd9;
            border-radius: 20px;
            padding: 20px;
            width: 90%;
            max-width: 800px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            color: #333;
            text-align: center;
            margin-top: 30px;
            overflow-y: auto;
            max-height: 90vh;
        }

        h1 {
            font-size: 24px;
            font-weight: bold;
            color: #4b0082;
            text-align: center;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        h2.section-title {
            font-size: 22px;
            font-weight: bold;
            color: #4b0082;
            margin: 20px 0 10px;
            text-transform: uppercase;
            border-bottom: 2px solid #4b0082;
            padding-bottom: 5px;
        }

        .user-card {
            background-color: #d8c3f3;
            padding: 15px;
            border-radius: 12px;
            margin-bottom: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            text-align: left;
        }

        .user-card h3 {
            font-size: 18px;
            font-weight: bold;
            color: #4b0082;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .user-card p {
            font-size: 16px;
            margin-bottom: 8px;
            color: #333;
        }

        .user-card .actions {
            margin-top: 10px;
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .user-card .btn {
            display: inline-block;
            padding: 8px 16px;
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            background-color: #4b0082;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        .user-card .btn:hover {
            background-color: #3a0061;
        }

        .delete-btn {
            background-color: #e74c3c;
        }

        .delete-btn:hover {
            background-color: #c0392b;
        }

        .suspend-btn {
            background-color: #f39c12;
        }

        .suspend-btn:hover {
            background-color: #e67e22;
        }

        .no-users {
            font-size: 16px;
            color: #4b0082;
            margin-top: 20px;
        }

        .return-btn {
            display: inline-block;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #4b0082;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            margin-top: 20px;
        }

        .return-btn:hover {
            background-color: #3a0061;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Gestion des utilisateurs</h1>

    <!-- Bloc des Propriétaires -->
    <h2 class="section-title">Propriétaires</h2>
    {% if proprietaires|length > 0 %}
        {% for utilisateur in proprietaires %}
            <div class="user-card">
                <h3>{{ utilisateur.nom }} {{ utilisateur.prenom }}</h3>
                <p><strong>Email :</strong> {{ utilisateur.email }}</p>
                <p><strong>Rôle :</strong> {{ utilisateur.roles|join(', ') }}</p>

                <div class="actions">
                    <a href="{{ path('admin_offres_utilisateur', {id: utilisateur.id}) }}" class="btn">Voir les offres</a>
                    <form action="{{ path('admin_suspendre_utilisateur', {id: utilisateur.id}) }}" method="POST" onsubmit="return confirm('Voulez-vous suspendre cet utilisateur ?')">
                        <button class="btn suspend-btn" type="submit">Suspendre</button>
                    </form>
                    <form action="{{ path('admin_supprimer_utilisateur', {id: utilisateur.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ? Cette action est irréversible.')">
                        <button class="btn delete-btn" type="submit">Supprimer</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p class="no-users">Aucun propriétaire trouvé.</p>
    {% endif %}

    <!-- Bloc des Emprunteurs -->
    <h2 class="section-title">Emprunteurs</h2>
    {% if emprunteurs|length > 0 %}
        {% for utilisateur in emprunteurs %}
            <div class="user-card">
                <h3>{{ utilisateur.nom }} {{ utilisateur.prenom }}</h3>
                <p><strong>Email :</strong> {{ utilisateur.email }}</p>
                <p><strong>Rôle :</strong> {{ utilisateur.roles|join(', ') }}</p>

                <div class="actions">
                    <form action="{{ path('admin_suspendre_utilisateur', {id: utilisateur.id}) }}" method="POST" onsubmit="return confirm('Voulez-vous suspendre cet utilisateur ?')">
                        <button class="btn suspend-btn" type="submit">Suspendre</button>
                    </form>
                    <form action="{{ path('admin_supprimer_utilisateur', {id: utilisateur.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ? Cette action est irréversible.')">
                        <button class="btn delete-btn" type="submit">Supprimer</button>
                    </form>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p class="no-users">Aucun emprunteur trouvé.</p>
    {% endif %}

    <!-- Bouton Retour -->
    <a href="{{ path('admin_dashboard') }}" class="return-btn">Retour au tableau de bord</a>
</div>

</body>
</html>
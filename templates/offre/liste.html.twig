{% block title %}Liste des Offres{% endblock %}

{% block body %}
    <h1>Liste des Offres Disponibles</h1>
    
    <div class="offres-container">
        {% for offre in offres %}
            <div class="offre-card">
                <h2>{{ offre.voiture.marque }} {{ offre.voiture.modele }}</h2>
                <p><strong>Prix :</strong> {{ offre.prix }} € / jour</p>
                <p><strong>Lieu :</strong> {{ offre.lieuGarage }}</p>
                <p><strong>Disponibilité :</strong> 
                    {% if offre.disponibilite %} ✅ Disponible {% else %} ❌ Non disponible {% endif %}
                </p>
                <a href="#">Voir l'offre</a>
            </div>
        {% else %}
            <p>Aucune offre disponible pour le moment.</p>
        {% endfor %}
    </div>

    <style>
        .offres-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .offre-card {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}
